      <%= render :partial => 'home/last'%>
      <div class="clear"></div>
    </div>
    <!-- fim abr-container -->

    <!-- include footer -->
    <%= render :partial => 'layouts/footer'%>

  </div>
  <!-- end bottom -->

</body>

